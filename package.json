{
  "name": "quill-table-up",
  "type": "module",
  "version": "2.1.3",
  "packageManager": "pnpm@9.9.0",
  "description": "A table module for quill2.x",
  "author": "zzxming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zzxming/quill-table-up"
  },
  "keywords": [
    "quill",
    "table",
    "module"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./index.css": "./dist/index.css",
    "./table-creator.css": "./dist/table-creator.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix",
    "build": "gulp --require @esbuild-kit/cjs-loader",
    "dev": "gulp --require @esbuild-kit/cjs-loader dev",
    "server": "node ./server.js",
    "test:unit": "vitest",
    "test:unit-ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui"
  },
  "peerDependencies": {
    "quill": "^2.0.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.12"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.4",
    "@playwright/test": "^1.49.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "@zzxming/eslint-config": "^0.4.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.17.0",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-less": "^5.0.0",
    "gulp-postcss": "^10.0.0",
    "jsdom": "^25.0.0",
    "parchment": "^3.0.0",
    "postcss-pxtorem": "^6.1.0",
    "resize-observer-polyfill": "^1.5.1",
    "rollup": "^4.18.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-svg-import": "^3.0.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.5"
  }
}
